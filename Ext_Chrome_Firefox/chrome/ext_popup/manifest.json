{
    "name": "Connect references extension",
    "short_name": "Connect references",
    "version": "1.2",
    "version_name": "1.2 bÃªta",
    "description": "Get reference from article stored in Connect web site",
    "manifest_version": 2,

    "icons": {
        "16": "images/icons/icon16.png",
        "32": "images/icons/icon32.png",
        "48": "images/icons/icon48.png",
        "128": "images/icons/icon128.png"
    },

    "permissions": [
        "tabs",
        "declarativeContent",
        "activeTab"
    ],

    "background": {
        "scripts": ["background_update.js"],
        "persistent": false
    },

    "page_action": {
      "default_popup": "html/popup.html",
      "default_icon": {
        "16": "images/icons/icon16.png",
        "32": "images/icons/icon32.png",
        "48": "images/icons/icon48.png",
        "128": "images/icons/icon128.png"
      }
    }
}
